<div class="row">
  <div class="col-md-6 col-md-offset-1">
		<h1>Locations</h1>

		<% if @results != nil %>
			<% @results.each do |result| %>
				<h3><%= link_to "#{result.name}", location_path(result) %></h3>
				<p><%= result.city %>, <%= result.state %> <%= result.zip %></p>
			<% end %>
		<% end %>

		<h1>Results</h1>

		<%= link_to "Add New Location", new_location_path, class: "btn btn-success" %>

	</div>


  <div class="col-md-4">
		<div class="container">
			<h1>New Search</h1>
			<%= form_tag("/locations", method: "get") do %>
			  <div class="form_group">
			    <%= label_tag :zip, "Zipcode: " %><br>
			    <%= text_field_tag :zip %>
			  </div><br>
			  <%= submit_tag "Search", :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>


<div id="map-canvas"></div>

