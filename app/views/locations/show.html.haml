%h1= @location.name
%p
  Address:
  %strong= @location.address
%p
  City:
  %strong= @location.city
%p
  State:
  %strong= @location.state
%p
  HH Start:
  %strong= @location.hh_start_time
%p
  HH End:
  %strong= @location.hh_end_time
= link_to "Edit", edit_location_path, class: "btn btn-primary"
= link_to "Delete", location_path, method: "delete", class: "btn btn-danger"
%hr/
%p= link_to "New Comment", new_location_comment_path(@location), id: "new_link", remote: true
#comments
  %h3 Comments
  %ul#review_list.list-unstyled
    - @location.comments.each do |c|
      %li
        .well
          = c.comment
          \- #{c.user.name}
