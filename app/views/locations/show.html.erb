<h1><%= @location.name %></h1>
<p>Address: <strong><%= @location.address %></strong></p>
<p>City: <strong><%= @location.city %></strong></p>
<p>State: <strong><%= @location.state %></strong></p>
<p>HH Start: <strong><%= @location.hh_start_time %></strong></p>
<p>HH End: <strong><%= @location.hh_end_time %></strong></p>

<%= link_to "Edit", edit_location_path, class: "btn btn-primary" %>
<%= link_to "Delete", location_path, method: "delete", class: "btn btn-danger" %>

<hr>

<p><%= link_to "New Comment", new_location_comment_path(@location), id: "new_link", remote: true %></p>

<div id="comments">
  <h3>Comments</h3>
  <ul class="list-unstyled" id="review_list">
    <% @location.comments.each do |c| %>
      <li>
        <%= c.comment %> - <%= c.user.name %>
      </li>
    <% end %>
  </ul>
</div>


