= render 'layouts/errors', :object => @location
= form_for @location do |f|
  .form_group
    = f.label :name, "Name"
    %br/
    = f.text_field :name
  .form_group
    = f.label :description, "Description"
    %br/
    = f.text_area :description
  %br/
  .form_group
    = f.label :address, "Street Address"
    %br/
    = f.text_field :address
  %br/
  .form_group
    = f.label :city, "City"
    %br/
    = f.text_field :city
  %br/
  .form_group
    = f.label :state, "State"
    %br/
    = f.text_field :state
  %br/
  .form_group
    = f.label :start_time, "Starting Time"
    %br/
    = f.time_field :start_time
  %br/
  .form_group
    = f.label :end_time, "Ending Time"
    %br/
    = f.time_field :end_time
  %br/
  .form_group
    = f.label :url, "Web Site URL"
    %br/
    = f.text_field :url
  %br/
  = f.submit(:class => "btn btn-primary")
